    app:startDestination="@+id/navigation_logs">

    <fragment
        android:id="@+id/navigation_logs"
        android:name="com.hexacomb.damkarmanager.ui.logs.LogsFragment"
        android:label="@string/title_logs"
        tools:layout="@layout/fragment_logs" />

    <fragment
        android:id="@+id/navigation_report"
        android:name="com.hexacomb.damkarmanager.ui.report.ReportFragment"
        android:label="@string/title_report"
        tools:layout="@layout/fragment_report" />

    <fragment
        android:id="@+id/navigation_alert"
        android:name="com.hexacomb.damkarmanager.ui.alert.AlertFragment"
        android:label="@string/title_alert"
        tools:layout="@layout/fragment_alert" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.hexacomb.damkarmanager.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
